{
  "name": "@bizon/selling-partner-api-sdk",
  "private": true,
  "description": "A modularized SDK library for Amazon Selling Partner API (fully typed in TypeScript)",
  "repository": "git@github.com:bizon/selling-partner-api-sdk.git",
  "author": "Vincent Mesquita <vincent.mesquita@bizon.solutions>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "clients/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "check:ts": "tsc --noEmit",
    "test": "jest",
    "generate-clients": "ts-node --project scripts/tsconfig.json scripts/generate-clients.ts",
    "postgenerate-clients": "xo --fix"
  },
  "dependencies": {},
  "devDependencies": {
    "@jest/types": "^27.4.2",
    "@openapitools/openapi-generator-cli": "^2.4.23",
    "@tsconfig/node14": "^1.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.4.0",
    "@types/jsonfile": "^6.0.1",
    "@types/lodash": "^4.14.178",
    "@types/mustache": "^4.1.2",
    "@types/rimraf": "^3.0.2",
    "bluebird": "^3.7.2",
    "camelcase": "^6.3.0",
    "chalk": "^4.1.2",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "fast-json-patch": "^3.1.0",
    "jest": "^27.4.5",
    "jest-junit": "^13.0.0",
    "jsonfile": "^6.1.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "openapi-types": "^10.0.0",
    "remark": "^13.0.0",
    "rimraf": "^3.0.2",
    "strip-markdown": "^4.2.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "turbo": "^1.0.24",
    "type-fest": "^2.8.0",
    "typedoc": "^0.19.2",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typedoc-plugin-remove-references": "^0.0.5",
    "typescript": "^4.5.4",
    "winston": "^3.3.4",
    "xo": "^0.47.0"
  },
  "turbo": {
    "pipeline": {
      "clean": {
        "cache": false,
        "outputs": []
      },
      "build": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  },
  "xo": {
    "parserOptions": {
      "project": "./tsconfig.xo.json"
    },
    "semicolon": false,
    "space": 2,
    "ignores": [
      "clients/*/src/api-model/**"
    ],
    "rules": {
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/no-implicit-any-catch": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "eslint-comments/no-unused-disable": "off",
      "import/extensions": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prefer-node-protocol": "off"
    },
    "prettier": true
  },
  "prettier": {
    "printWidth": 100
  }
}
