{
  "name": "@bizon/selling-partner-api-sdk",
  "private": true,
  "description": "A modularized SDK library for Amazon Selling Partner API (fully typed in TypeScript)",
  "repository": "git@github.com:bizon/selling-partner-api-sdk.git",
  "author": "Vincent Mesquita <vincent.mesquita@bizon.solutions>",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "codegen",
      "packages/*",
      "clients/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "check:ts": "turbo run check:ts",
    "test": "jest",
    "codegen": "ts-node --project codegen/tsconfig.json codegen/generate.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@jest/types": "^29.2.1",
    "@knodes/typedoc-plugin-monorepo-readmes": "^0.23.1",
    "@lerna-lite/cli": "^1.12.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^29.1.2",
    "@types/node": "^16.11.68",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint-config-xo-bizon": "^1.1.1",
    "jest": "^29.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "turbo": "^1.5.6",
    "typedoc": "^0.23.18",
    "typedoc-monorepo-link-types": "^0.0.4",
    "typescript": "^4.8.4",
    "xo": "^0.52.4"
  },
  "xo": {
    "extends": "xo-bizon",
    "settings": {
      "import/internal-regex": "^@sp-api-sdk/"
    },
    "parserOptions": {
      "project": "./tsconfig.xo.json"
    },
    "semicolon": false,
    "space": 2,
    "ignores": [
      "clients/*/src/api-model/**"
    ],
    "overrides": [
      {
        "files": "packages/notifications/**",
        "rules": {
          "unicorn/prevent-abbreviations": "off"
        }
      }
    ],
    "prettier": true
  },
  "prettier": {
    "printWidth": 100
  }
}
