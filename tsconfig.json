{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "incremental": true,
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "exclude": [
    "jest.config.ts"
  ],
  "typedocOptions": {
    "name": "Selling Partner API SDK for JavaScript",
    "out": "docs",
    "mode": "modules",
    "readme": "README.md",
    "excludePrivate": true,
    "exclude": [
      "**/node_modules/**",
      "**/__test__/**",
      "./scripts/**"
    ],
    "plugin": [
      "typedoc-plugin-lerna-packages",
    ]
  }
}
