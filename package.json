{
  "name": "sp-api-sdk",
  "version": "0.0.0",
  "description": "A modularized SDK library for Amazon Selling Partner API (fully typed in TypeScript)",
  "main": "index.ts",
  "repository": "git@github.com:bizon/selling-partner-api-sdk.git",
  "author": "Vincent Mesquita <vincent.mesquita@bizon.solutions>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "lib/*",
      "clients/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "clean.all": "yarn clean && lerna clean",
    "check:ts": "tsc --noEmit",
    "test": "NODE_ENV=test yarn jest",
    "generate-clients": "ts-node --project tsconfig.scripts.json scripts/generate-clients.ts"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.3.9",
    "@tsconfig/node14": "^1.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^26.0.24",
    "@types/jsonfile": "^6.0.1",
    "@types/lodash": "^4.14.171",
    "@types/mustache": "^4.1.2",
    "@types/rimraf": "^3.0.1",
    "bluebird": "^3.7.2",
    "camelcase": "^6.2.0",
    "chalk": "^4.1.2",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "jsonfile": "^6.1.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "nock": "^13.1.1",
    "remark": "^13.0.0",
    "rimraf": "^3.0.2",
    "strip-markdown": "^4.1.0",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "type-fest": "^1.3.0",
    "typedoc": "^0.20.37",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typescript": "^4.3.5",
    "winston": "^3.3.3",
    "xo": "^0.39.1"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "ignores": [
      "**/src/api-model/**"
    ],
    "rules": {
      "@typescript-eslint/no-implicit-any-catch": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "eslint-comments/no-unused-disable": "off",
      "unicorn/no-array-reduce": "off"
    }
  }
}
