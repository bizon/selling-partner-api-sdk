{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "incremental": true,
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "typedocOptions": {
    "name": "Selling Partner API SDK for JavaScript",
    "out": "docs",
    "mode": "modules",
    "readme": "README.md",
    "excludePrivate": true,
    "excludeNotExported": true,
    "excludeExternals": true,
    "exclude": [
      "**/__test__/**",
      "**/jest.config.ts",
      "clients/*/src/api-model/api/**",
      "clients/*/src/api-model/*.ts"
    ],
    "plugin": [
      "typedoc-plugin-lerna-packages",
      "typedoc-plugin-remove-references"
    ]
  }
}
