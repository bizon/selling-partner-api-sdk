{
  "name": "@bizon/selling-partner-api-sdk",
  "private": true,
  "description": "A modularized SDK library for Amazon Selling Partner API (fully typed in TypeScript)",
  "repository": "git@github.com:bizon/selling-partner-api-sdk.git",
  "author": "Vincent Mesquita <vincent.mesquita@bizon.solutions>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "check:ts": "turbo run check:ts",
    "test": "jest",
    "codegen": "tsx --tsconfig codegen/tsconfig.json codegen/generate.ts"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@lerna-lite/cli": "^3.2.0",
    "@lerna-lite/publish": "^3.2.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.19.7",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint-config-xo-bizon": "^2.0.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "turbo": "^1.11.3",
    "typedoc": "^0.25.7",
    "typedoc-plugin-missing-exports": "^2.1.0",
    "typescript": "^5.3.3",
    "xo": "^0.56.0"
  },
  "xo": {
    "extends": "xo-bizon",
    "settings": {
      "import/internal-regex": "^@sp-api-sdk/"
    },
    "parserOptions": {
      "project": "./tsconfig.xo.json"
    },
    "semicolon": false,
    "space": 2,
    "ignores": [
      "clients/*/src/api-model/**"
    ],
    "overrides": [
      {
        "files": [
          "packages/**",
          "clients/**"
        ],
        "rules": {
          "unicorn/prevent-abbreviations": "off"
        }
      }
    ],
    "prettier": true
  },
  "prettier": {
    "printWidth": 100
  }
}
