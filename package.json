{
  "name": "sp-api-sdk",
  "version": "0.0.0",
  "description": "A modularized SDK library for Amazon Selling Partner API (fully typed in TypeScript)",
  "main": "index.ts",
  "repository": "git@github.com:bizon/selling-partner-api-sdk.git",
  "author": "Vincent Mesquita <vincent.mesquita@bizon.solutions>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "lib/*",
      "clients/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "clean.all": "yarn clean && lerna clean",
    "prerelease": "yarn build",
    "release": "lerna publish -m 'chore(release): publish'",
    "test": "NODE_ENV=test yarn jest",
    "generate-clients": "ts-node --project tsconfig.scripts.json scripts/generate-clients.ts"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.3.3",
    "@tsconfig/node14": "^1.0.0",
    "@types/bluebird": "^3.5.35",
    "@types/jest": "^26.0.23",
    "@types/jsonfile": "^6.0.0",
    "@types/lodash": "^4.14.170",
    "@types/mustache": "^4.1.1",
    "@types/rimraf": "^3.0.0",
    "bluebird": "^3.7.2",
    "camelcase": "^6.2.0",
    "chalk": "^4.1.1",
    "jest": "^27.0.5",
    "jest-junit": "^12.2.0",
    "jsonfile": "^6.1.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "nock": "^13.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4",
    "winston": "^3.3.3",
    "xo": "^0.39.1"
  },
  "xo": {
    "semicolon": false,
    "ignores": [
      "clients/**/api-model/**",
      "clients/**/node_modules/**",
      "pakcages/**/node_modules/**"
    ],
    "rules": {
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "unicorn/no-array-reduce": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "eslint-comments/no-unused-disable": "off"
    }
  }
}
