{
  "name": "@bizon/selling-partner-api-sdk",
  "private": true,
  "description": "A modularized SDK library for Amazon Selling Partner API (fully typed in TypeScript)",
  "repository": "git@github.com:bizon/selling-partner-api-sdk.git",
  "author": "Vincent Mesquita <vincent.mesquita@bizon.solutions>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "check:ts": "turbo run check:ts",
    "test": "jest",
    "codegen": "ts-node --project codegen/tsconfig.json codegen/generate.ts"
  },
  "devDependencies": {
    "@jest/types": "^29.6.1",
    "@lerna-lite/cli": "^2.5.0",
    "@lerna-lite/publish": "^2.5.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.16.19",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "eslint-config-xo-bizon": "^1.2.0",
    "jest": "^29.6.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.8",
    "typedoc": "^0.24.8",
    "typedoc-plugin-missing-exports": "^2.0.0",
    "typescript": "^5.1.6",
    "xo": "^0.55.0"
  },
  "xo": {
    "extends": "xo-bizon",
    "settings": {
      "import/internal-regex": "^@sp-api-sdk/"
    },
    "parserOptions": {
      "project": "./tsconfig.xo.json"
    },
    "semicolon": false,
    "space": 2,
    "ignores": [
      "clients/*/src/api-model/**"
    ],
    "overrides": [
      {
        "files": "packages/notifications/**",
        "rules": {
          "unicorn/prevent-abbreviations": "off"
        }
      }
    ],
    "prettier": true
  },
  "prettier": {
    "printWidth": 100
  }
}
